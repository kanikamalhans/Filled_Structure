  width: 80%; /* Increase width to 80% of the viewport width */
  height: 80%; /* Increase height to 80% of the viewport height */
  max-width: 1200px; /* Optional: Set a maximum width to prevent it from becoming too large */
  max-height: 700px; /* Optional: Set a maximum height */
  background-color: white;
  padding: 30px; /* Increase padding for better spacing */
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2); /* Increase shadow for better visibility */
  overflow: auto; /* Add scrolling if content overflows */
  z-index: 1000; /* High z-index to overlay other content */
  border-radius: 8px; /* Optional: Add border-radius for rounded corners */
}

.popup h3 {
  margin-top: 0;
  font-size: 1.5em; /* Increase font size for the title */
}

.popup button {
